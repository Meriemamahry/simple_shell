#include "shell.h"

/**
 * interact - see if the shell is in interactive mode
 * @info: adress
 * Return: 1 or 0
 */
int interact(info_t *info)
{
return (isatty(STDIN_FILENO) && info->readfd <= 2);
}

/**
 * delimit - see if the  character is a delimeter
 * @i: char need to be checked
 * @delim: delimeter string
 * Return: 1 or 0
 */
int delimit(char i, char *delim)
{
while (*delim)
if (*delim++ == i)
return (1);
return (0);
}

/**
 *_isalpha - checks if there is any  alphabetic character
 *@i: character to insert
 *Return: 1 or 0
 */

int _isalpha(int i)
{
if ((i >= 'a' && i <= 'z') || (i >= 'A' && i <= 'Z'))
return (1);
else
return (0);
}

/**
 *_atoi - converts a string to an integer
 *@s: the string to be converted
 *Return: 0 if no numbers in string, converted number otherwise
 */

int _atoi(char *s)
{
	int i, sign = 1, flag = 0, output;
	unsigned int result = 0;

	for (i = 0;  s[i] != '\0' && flag != 2; i++)
	{
		if (s[i] == '-')
			sign *= -1;

		if (s[i] >= '0' && s[i] <= '9')
		{
			flag = 1;
			result *= 10;
			result += (s[i] - '0');
		}
		else if (flag == 1)
			flag = 2;
	}

	if (sign == -1)
		output = -result;
	else
		output = result;

	return (output);
}
